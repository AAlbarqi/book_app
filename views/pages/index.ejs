<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/head') %>
</head>
<body>
    <%- include('../layout/header') %>
    <main>
    <h3>Number of Books: <%= bookList.length %></h3>
    <ul>
      <% bookList.forEach(book => { %>
          <li>
              <%- include('books/detail', {book : book}) %>
              <form action="/book/<%=book.id %>">
                <button type="submit">VIEW DETAILS</button>
              </form>  
          </li>
      <% }); %>
  </ul>
    </main>
    <%- include('../layout/footer') %>
</body>
</html>